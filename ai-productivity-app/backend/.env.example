# Application settings
APP_NAME="AI Productivity App"
DEBUG=false

# Database
DATABASE_URL=sqlite:///./data/app.db
DATABASE_ECHO=false

# Project management phase 3
PROJECT_FEATURES_ENABLED=true
PROJECTS_PAGINATION_DEFAULT=20
PROJECTS_PAGINATION_MAX=100

# Security
SECRET_KEY=your-secret-key-here-use-secrets-module-to-generate

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenAI API Configuration
# Use either OpenAI or Azure OpenAI (not both)

# Option 1: Standard OpenAI
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your-openai-key
# LLM_MODEL=gpt-4o-mini

# Option 2: Azure OpenAI with Chat Completions API
# LLM_PROVIDER=azure
# AZURE_OPENAI_API_KEY=nClGElxn2jB3qTRQ0rxwMZi9ehHM3thZ3uVidNs0M8iXNOlnJ8lGJQQJ99BFACHYHv6XJ3w3AAABACOGY9E6
# AZURE_OPENAI_ENDPOINT=https://oairesourcehp.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-02-01
# LLM_MODEL=gpt-4.1  # Your deployment name (same as model name)

# Option 3: Azure OpenAI with Responses API (advanced features) - RECOMMENDED
# LLM_PROVIDER=azure
# AZURE_OPENAI_API_KEY=nClGElxn2jB3qTRQ0rxwMZi9ehHM3thZ3uVidNs0M8iXNOlnJ8lGJQQJ99BFACHYHv6XJ3w3AAABACOGY9E6
# AZURE_OPENAI_ENDPOINT=https://oairesourcehp.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2025-04-01-preview
# LLM_MODEL=gpt-4.1  # Your deployment name (same as model name)

# Option 4: Azure OpenAI with Entra ID authentication
# LLM_PROVIDER=azure
# AZURE_AUTH_METHOD=entra_id
# AZURE_OPENAI_ENDPOINT=https://oairesourcehp.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2025-04-01-preview
# LLM_MODEL=gpt-4.1
